{
  "python.formatting.provider": "black",
  "python.formatting.blackPath": "~/.local/venvs/neovim/bin/black",
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "objc", "objcpp"],
      "rootPatterns": [".ccls", "compile_commands.json", ".vim/", ".git/", ".hg/"]
    }
  },
  "svelte.enable-ts-plugin": true
}
